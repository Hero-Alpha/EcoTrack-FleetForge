    padding: 30px;
    background-color: #CFFCB7;
    color: #0d0101;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    header h1 {
    margin: 0;
    font-size: 2.8rem;
    letter-spacing: 1px;
    }

    .intro {
    text-align: center;
    padding: 20px;
    background-color: #DAF8FF;
    color: #044d5d;
    }

    .intro p {
    font-size: 1.3rem;
    margin: 10px 0;
    }

    .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 30px;
    }

    .card {
    background: #ffffff;
    border-radius: 15px;
    padding: 20px;
    width: 390px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s, box-shadow 0.3s;
    position: relative;
    overflow: hidden;
    }

    .card img {
    width: 100%;
    height: auto;
    max-height: 180px;
    border-radius: 5px;
    margin-bottom: 15px;
    object-fit: contain;
    }

    .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 20px rgba(110, 25, 25, 0.2);
    }

    .card h2 {
    font-size: 1.8rem;
    margin-bottom: 10px;
    color: #455b72;
    }

    .card p {
    font-size: 1rem;
    margin: 8px 0;
    color: #6C757D;
    padding-left: 10px;
    }

    .card .feedback {
    margin-top: 15px;
    display:contents;
    margin-right:10px;
    }

    .rating {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px 0;
    }

    .rating span {
    font-size: 1.5rem;
    color: #FFD700;
    cursor: pointer;
    transition: color 0.3s;
    }

    .rating span:hover,
    .rating span.active {
    color: #FFC107;
    }

    .feedback {
    border-top: 1px solid #E9ECEF;
    padding-top: 15px;
    display:flexbox;
    }

    .feedback div {
    margin-bottom: 15px;
    display: flex;
    align-items: flex-start;
    }

    .feedback div img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 20px;
    }

    .feedback div strong {
    display: flexbox;
    color: #343A40;
    margin-bottom: 5px;
    margin-right: 10px;
    white-space: nowrap;
    }

    .feedback div span {
    margin-right: 10px;
    display: grid;
    color: #6C757D;
    margin-top: 5px;
    }

    .feedback-input {
    margin-top: 20px;
    border-top: 1px solid #E9ECEF;
    padding-top: 15px;
    }

    .feedback-input textarea {
    width: calc(100% - 20px);
    padding: 10px;
    border: 1px solid #DADCE0;
    border-radius: 8px;
    resize: none;
    }

    .feedback-input button {
    margin-top: 10px;
    padding: 10px 20px;
    background-color: #38B000;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    }

    .feedback-input button:hover {
    background-color: #2C9500;
    }

    .card .percentage-bar {
    height: 20px;
    background: #E9ECEF;
    border-radius: 10px;
    overflow: hidden;
    margin: 10px 0;
    position: relative;
    }

    .card .percentage-bar .fill {
    height: 100%;
    width: 0;
    background: #38B000;
    transition: width 1s;
    }

    .card:hover .fill {
    width: var(--percentage);
    }

    footer {
    text-align: center;
    padding: 15px;
    background-color: #343A40;
    color: #E9ECEF;
    }

    @media (max-width: 768px) {
    .card {
    width: 90%;
    }
    }
</style>
   

    
